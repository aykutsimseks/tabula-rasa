{
  "apps": [
    {
      "name"             : "preformance",
      "cwd"              : "/home/ubuntu/performance-dashboards",
      "script"           : "server.js",
      "log_date_format"  : "YYYY-MM-DD HH:mm Z",
      "error_file"       : "~/.pm2/logs/preformance/error.log",
      "out_file"         : "~/.pm2/logs/preformance/out.log",
      "pid_file"         : "~/.pm2/pids/preformance.pid",
      "instances"        : 3,
      "min_uptime"       : "200s",
      "max_restarts"     : 10,
      "max_memory_restart": "500M",
      "cron_restart"     : "1 0 * * *",
      "watch"            : false,
      "merge_logs"       : true,
      "exec_interpreter" : "node",
      "exec_mode"        : "cluster",
      "autorestart"      : true,
      "vizion"           : false,
      "env": {
        "NODE_ENV": "production",
        "PORT": "3000"
      }
    }

  ]
}


